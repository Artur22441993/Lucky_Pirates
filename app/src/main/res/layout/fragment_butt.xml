<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentButt">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">


        <android.widget.Button
            android:id="@+id/buSta"
            android:layout_width="201dp"
            android:layout_height="72dp"
            android:background="#A14428"
            android:text="start game"
            android:textColor="#F1EEEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/butPol"
            android:layout_width="201dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:background="#A14428"
            android:text="Privacy Policy"
            android:textColor="#FDFDFD"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/buSta"
            app:layout_constraintStart_toStartOf="@+id/buSta"
            app:layout_constraintTop_toBottomOf="@+id/buSta" />

        <android.widget.Button
            android:id="@+id/butClo"
            android:layout_width="201dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:background="#A14428"
            android:text="close games"
            android:textColor="#FAF6F6"
            app:layout_constraintEnd_toEndOf="@+id/butPol"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="@+id/butPol"
            app:layout_constraintTop_toBottomOf="@+id/butPol" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>